{
    "compilerOptions": {
      "checkJs": true, // this applies @ts-check to every js file
      "lib": [ "es6", "dom", "es2017", "esnext" ],
      "module": "esnext",
      "target": "es2017",
  
      // WARNINGS
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "noUnusedParameters": true,
      "allowUnreachableCode": false,
      "allowUnusedLabels": false,
      "alwaysStrict": true,
      "noUnusedLocals": true,

      "outDir": "out",

      "sourceMap": true
      
    },
       
    "typeAcquisition": {
      "include": ["jquery"]
    },

    

  }